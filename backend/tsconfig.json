{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "lib": ["es7", "es2015", "dom"],
    "target": "esnext",
    "resolveJsonModule": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "build"
  ]
}